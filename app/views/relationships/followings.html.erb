<div class="container py-3 px-sm-0">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <%= render 'users/info', user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1 pt-3">
        <div><%= image_tag 'head/follows.gif' %></div>
      <% if @users.exists? %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.png", class: "rounded-circle" %></td>
            <td><%= link_to user.name, user_path(user.id) %></td>
            <td>follows:　<%= user.followings.count %></td>
            <td>followers:　<%= user.followers.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>  
</div>