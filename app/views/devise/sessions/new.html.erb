<div class="container py-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div><%= image_tag 'head/login.gif', class: "mb-3" %></div>
      
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control form-control-sm col-md-5" %>
        </div>
      
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control form-control-sm col-md-5" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions mb-2">
          <input type="submit" value="&#xf2f6; Log in" class="fas btn btn-sm btn-success">
        </div>
      <% end %>
      <div class="form-group mt-4">
        <p>パスワードをお忘れの方は<%= link_to "こちら", new_password_path(resource_name) %></P>
    </div>
  </div>
</div>