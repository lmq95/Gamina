<div class="container py-3 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="text-center my-4">
        <%= image_tag 'head/edit.gif' %><%= image_tag 'head/user.gif' %></div>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">名前</label>
            <%= f.text_field :name, autofocus: true, id:"user_name", class: "form-control name" %>
          </div>
          <div class="form-group">
            <label for="inputImage">プロフィール画像</label>
            <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">紹介文</label>
            <%= f.text_area :introduction, autofocus: true, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit "UPDATE", class: "btn btn-secondary rounded-pill" %>
          </div>
        <% end %>
    </div>
  </div>
</div>