<div class="container py-3 px-sm-0">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <%= render 'users/info', user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1 pt-3">
      <div><%= image_tag 'head/users1.gif', class: "mr-5" %>
        <%=link_to " グループを作成",new_group_path, class: 'fas fa-ghost btn btn-sm btn-success rounded-pill' %>
        | 
        <%=link_to " グループを見る",groups_path, class: 'fas fa-dragon btn btn-sm btn-info rounded-pill' %></div>
      <table class="table table-hover table-inverse table-striped">
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.png", class: "rounded-circle" %></td>
              <td><%= link_to user.name, user_path(user.id) %></td>
              <td>follows:  <%= link_to user.followings.count, user_followings_path(user) %> </td>
              <td>followers:  <%= link_to user.followers.count, user_followers_path(user) %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>