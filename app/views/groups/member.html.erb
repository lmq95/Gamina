<div class="container py-3 px-sm-0">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <%= render 'users/info', user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="py-3"><%= image_tag 'head/group.gif' %><%= image_tag 'head/member.gif' %></div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>メンバー</th>
            <th>紹介文</th>
            </tr>
        </thead>
        <tbody>
          <% @group.users.each do |member| %>
            <tr>
              <td>
                <%= attachment_image_tag member, :profile_image, :fill, 40, 40, fallback: "no-image-icon.png", class: "rounded-circle" %>
              </td>
              <td><%= link_to member.name, user_path(member.id) %></td>
              <td><%= member.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>