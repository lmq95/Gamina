<div class="container py-3 px-sm-0">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <%= render 'users/info', user: current_user %>
    </div>
      
    <div class="col-md-8 offset-md-1 pt-3">
      <div><%= image_tag 'head/group' %></div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
          <tr>
            <td><%= attachment_image_tag group, :group_image, :fill, 40, 40, fallback: "no-image-icon.png", class: "rounded-circle" %></td>
            <td><%= link_to group.name, group_path(group) %></td>
            <td><%= group.introduction %></td>
            <td><i class="fas fa-gamepad"><%= group.users.count %></i></td>
            <td>
              <% if group.owner_id == current_user.id %>
                <%= link_to "", edit_group_path(group), class: "fas fa-pencil-alt" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>  
</div>