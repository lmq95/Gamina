<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="text-center my-4">
        <%= image_tag 'head/edit' %><%= image_tag 'head/group' %></div>
        <%= form_with model:@group, local:true do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, autofocus: true, class: "form-control group_name" %>
        </div>
        <div class="form-group">
          <%= f.label :グループ画像 %>
          <%= f.attachment_field :group_image, class: "form-control-file group_image" %>
        </div>
        <div class="form-group">
          <%= f.label :グループ紹介%>
          <%= f.text_area :body, autofocus: true, class: "form-control group_introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>