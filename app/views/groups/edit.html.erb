<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="text-center my-4">
        <%= image_tag 'head/edit.gif' %><%= image_tag 'head/group.gif' %></div>
        <%= form_with model:@group, local:true do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, autofocus: true, class: "form-control group_name rounded-pill" %>
        </div>
        <div class="form-group">
          <%= f.label :グループ画像 %>
          <%= f.attachment_field :group_image, class: "form-control-file group_image" %>
        </div>
        <div class="form-group">
          <%= f.label :グループ紹介%>
          <%= f.text_area :introduction, autofocus: true, class: "form-control group_introduction rounded-pill" %>
        </div>
        <div class="form-group">
          <input type="submit" value="&#xf303; update" class="fas btn btn-sm btn-success rounded-pill">
        </div>
      <% end %>
    </div>
  </div>
</div>