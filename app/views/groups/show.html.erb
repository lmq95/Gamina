<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <%= render 'users/info', user: current_user %>
    </div>
      
    <div class="col-md-8 offset-md-1 pt-3">
      <div><%= image_tag 'head/time' %><%= image_tag 'head/line' %></div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |member| %>
                <%= member.name %>
              <% end %>
            </td>
            <td>
              <% if @group.owner_id == current_user.id %>
                <%= link_to "", edit_group_path(@group), class: "fas fa-pencil-alt" %>
              <% elsif @group.users.include?(current_user) %>
              <td><%= link_to 'Leave', group_path(@group), method: :delete, class: "btn btn-sm btn-danger" %></td>
              <% else %>
                <td><%= link_to 'Join', group_join_path(@group), class: "btn btn-sm btn-success" %></td>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>  
</div>