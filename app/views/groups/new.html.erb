<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model:@group, local:true do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, autofocus: true, class: "form-control group_name" %>
        </div>
        <div class="form-group">
          <%= f.label :グループ紹介%>
          <%= f.text_area :introduction, autofocus: true, class: "form-control group_introduction" %>
        </div>
        <div class="form-group">
          <input type="submit" value="&#xf1d8; 投稿" class="fas btn btn-success">
        </div>
      <% end %>
    </div>
  </div>
</div>