<div class="container py-3 px-sm-0">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <%= render 'users/info', user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1 pt-3">
      <table class="table table-hover table-inverse" >
        <tbody>
          <tr>
            <td><%= attachment_image_tag @post.user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.png", class: "rounded-circle" %></td>
            <td><%= @post.title %></td>
            <td><%= @post.body %></td>
            <td><%= render 'favorites/favorite', post: @post %></td>
            <% if @post.user_id == current_user.id %>
              <td><%= link_to "", edit_post_path(@post), class: "fas fa-pencil-alt" %></td>
              <td><%= link_to "", post_path(@post), method: :delete, data: {confirm: "本当に消しますか？"}, class: "fas fa-trash-alt" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= render 'post_comments/comment', post: @post, post_comment: @post_comment %>
    </div>
  </div>
</div>