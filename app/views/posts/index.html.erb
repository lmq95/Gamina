<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse" >
        <thead>
          <tr>
            <th>image</th>
            <th>title</th>
            <th>review</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
          <td><%= link_to user_path(post.user.id) do %>
                <%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, fallback: "no-image.png", class: "rounded-circle" %></td>
              <% end %>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td></td>
          <td></td>
          <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>